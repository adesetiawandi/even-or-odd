#include<bits/stdc++.h>
using namespace std;

void check_number(int num){
    if(num%2==0){
        cout<<num<<" is an even number";
    }
    else{
        cout<<num<<" is an odd number";
    }
}

int main(){
    int num;
    cout<<"Enter the number you want to check:-";
    cin>>num;
    check_number(num);
    return 0;
}
